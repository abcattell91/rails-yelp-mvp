<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<% @restaurant.reviews.each do |review| %>
<p><%= '⭐️' * review.rating %></p>
<p><%= review.content %></p>
<hr>
<% end %>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'Add a new review', new_restaurant_review_path(@restaurant) %>
